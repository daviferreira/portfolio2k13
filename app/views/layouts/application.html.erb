<!DOCTYPE html>
<html>
<head>
    <title>Portfolio2k13</title>
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= stylesheet_link_tag "pages", :media => "all" %>
    <%= csrf_meta_tags %>
</head>
<body>
    <%= render "shared/notifications" %>
    <%= render "shared/user_info" %>
    <div class="l-content">
        <div class="top-nav-bar">
            <div class="container">
                <div class="language">
                    <% if I18n.locale == :en %>
                        <%= link_to raw("ver em portuguÃªs &#8250;"), localized_root_path(:locale => "pt-BR") %>
                    <% else %>
                        <%= link_to raw("switch to english &#8250;"), root_path %>
