<div class="projects-container projects-page secondary-page clearfix">
    <div class="container clearfix">
        <aside class="sidebar">
            <div class="sidebar-container">
                <header class="clearfix">
                    <h1>Crafts</h1>
                </header>
                <div class="sidebar-navigation">
                    <ul class="filters clearfix filters-categories">
                      <li><%= link_to "todos", projects_path(:locale => current_locale) %></li>
                      <% @categories.each do |category| %>
                        <li><%= link_to category.name, projects_by_category_path(category, :locale => current_locale) %></li>
                      <% end %>
                    </ul>
                </div>
                <%= render "shared/myself" %>
            </div>
        </aside>
        <section class="projects-list clearfix main-content">
            <div class="limit"></div>
            <h3><span id="year-title"><%= @year %></span></h3>
            <% @projects_by_year.each do |year, projects| %>
                <ul class="clearfix<% if year == @year %> first<% end %>" data-year="<%= year %>">
                <% projects.each do |project| %>
                    <li>
                        <a href="<%= project_path(project, :locale => current_locale) %>">
                            <% unless project.photos.empty? %>
                                <figure>
                                    <%= image_tag project.photos.first.file.url(:thumb), :size => "80x80" %>
                                </figure>
                            <% end %>
                            <%= project.name %>
                        </a>
                    </li>
                <% end %>
                </ul>
            <% end %>
        </section>
    </div>
</div>
