<div class="grid">
    <div class="admin-container">
        <div class="row">
            <header class="admin-header">
                <h1><%= t "projects.list" %></h1>
            </header>
        </div>

        <div class="row">
            <table>
                <thead>
                    <tr>
                        <th>Project</th>
                        <th class="actions">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% @projects.each do |project| %>
                        <tr>
                            <td><%= project.name %></td>
                            <td class="actions">edit or delete</td>
                        </tr>
                    <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>
