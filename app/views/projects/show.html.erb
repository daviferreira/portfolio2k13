<div class="projects-container projects-page secondary-page clearfix">
    <div class="container clearfix">
        <aside class="sidebar">
            <div class="sidebar-container">
                <header class="clearfix">
                    <h1>Crafts</h1>
                </header>
                <nav class="sidebar-navigation">
                    <a class="current" href="#">by date</a>
                    <a href="#">by category</a>
                    <a href="#">by tag</a>
                </nav>
                <%= render "shared/myself" %>
            </div>
        </aside>
        <section class="project-details clearfix main-content">
            <figure>
                <div>
                    <%= image_tag @project.photos.first.file.url(:highlight) %>
                </div>
            </figure>
            <header>
                <h1><%= @project.name %></h1>
            </header>
            <p class="description"><%= @project.description %></p>
            <div class="screenshots">
                <ul class="clearfix js-gallery">
                    <% @project.photos.each do |photo| %>
                        <li><a href="<%= photo.file.url(:original) %>" title="<%= photo.title %>"><%= image_tag photo.file.url(:thumb) %></a></li>
                    <% end %>
                </ul>
            </div>
            <div class="meta">Filed under <%= link_to @project.category.name, category_path(:id => @project.category, :locale => current_locale) %> <span>&bullet;</span> delievered on <time><%= @project.due_date.to_s(:published) %></time></div>
            <% if @project.url %>
              <div class="link"><%= link_to @project.url, @project.url %></div>
            <% end %>
        </section>
    </div>
</div>
