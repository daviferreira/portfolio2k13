<div class="post-container post-page secondary-page">
    <div class="container clearfix">
        <section class="sidebar">
            <div class="sidebar-container">
                <header class="clearfix">
                    <h1>Writing</h1>
                </header>
                <%= render "sidebar" %>
                <%= render "shared/myself" %>
            </div>
        </section>
        <section class="post clearfix main-content">
            <article>
            <div class="meta"><%= @post.tags %> <span>&bullet;</span> <time><%= localize @post.published_date, :format => '%B %Y' %></time></div>
                <a href="<%= post_path(:id => @post, :locale => current_locale) %>">
                    <h1><%= @post.title %></h1>
                </a>
                <p class="abstract"><%= @post.abstract %></p>
                <%= raw @post.body %>
            </article>
            <div id="disqus_thread"></div>
            <script type="text/javascript">
                var disqus_shortname = 'daviferreiracom';
                (function() {
                    var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
                    dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
                    (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
                })();
            </script>
        </section>
    </div>
</div>
